<%= form_for :item, url: items_path do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.label :price %>
        <%= f.text_field :price %>
    </p>

    <p>
        <%= f.label :image %>
        <%= f.text_field :image %>
    </p>

    <p>
        <%= f.label :tags %>
        <%= f.collection_check_boxes :tags, Tag.all, :id, :title  %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
